# ── Required ──────────────────────────────────────────────────────────────────

# Telegram Bot token (from @BotFather)
TG_BOT_TOKEN=your_bot_token_here

# Telegram storage channel ID (negative number, e.g. -1001234567890)
TG_CHANNEL_ID=-1001234567890

# Cloudreve admin credentials
CLOUDREVE_URL=http://localhost:5212
CLOUDREVE_USER=admin@example.com
CLOUDREVE_PASSWORD=your_cloudreve_password

# ── Optional ───────────────────────────────────────────────────────────────────

# Port the adapter listens on (default: 3000)
PORT=3000

# SQLite database file path (default: ./data/mappings.db)
DB_PATH=./data/mappings.db

# Cloudreve folder where bot-forwarded files are stored (default: /TelegramInbox)
CLOUDREVE_INBOX_PATH=/TelegramInbox

# Delete Cloudreve local copy after this many idle days (default: 7)
CACHE_IDLE_DAYS=7

# How often (in minutes) to poll Cloudreve for new unsynced files (default: 5)
POLL_INTERVAL_MINUTES=5

# Secret token to protect the admin API and Cloudreve webhook endpoint
# (include as X-Webhook-Secret header or ?secret=... query param)
WEBHOOK_SECRET=

# Secret token to verify incoming Telegram webhook requests
# (must match the secret_token registered with setWebhook)
TG_WEBHOOK_SECRET=

# Custom Telegram Bot API server (optional – for local API server)
# TG_API_BASE=https://api.telegram.org

# Set to "true" to skip the initial sync pass on startup
# SKIP_INITIAL_SYNC=false
